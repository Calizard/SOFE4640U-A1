<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentResults">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="#18442C"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Payment Results"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/MortgageDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mortgage Details: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/monthlyPaymentText"
        app:layout_constraintTop_toBottomOf="@+id/monthlyPaymentText" />

    <TextView
        android:id="@+id/PaymentDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Monthly Payment Details: "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/MortgageDetailsText"
        app:layout_constraintTop_toBottomOf="@+id/MortgageDetailsText" />

    <TextView
        android:id="@+id/monthlyPaymentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="#EDF8EF"
        android:text="Monthly Payment: "
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="openMain"
        android:text="Back"
        app:backgroundTint="#18442C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PaymentDetailsText" />


</androidx.constraintlayout.widget.ConstraintLayout>